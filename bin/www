#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app'); /*imports the express app.js file*/
var debug = require('debug')('schoolwebsite:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000'); /* uses method on line 36 to parse a string containing the port into an int*/
app.set('port', port); /*Uses return value from normalizePort() and sets that to the port defined in app.js*/
/*app.js is the file where express handles most things*/

/**
 * Create HTTP server.
 */

var server = http.createServer(app); /*creates the server, then passes app as a handler for all server requests and responses*/

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port); /*Server is listening on port defined on line 15, and set on 16*/
server.on('error', onError); /*handles errors using the function on line 67*/
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
